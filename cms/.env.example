# =================================
# Keystone CMS Environment Variables
# =================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to git!

# ----------------------------------
# Database
# ----------------------------------
DATABASE_URL="postgresql://user:password@localhost:5432/busrom_dev"

# ----------------------------------
# Session & Security
# ----------------------------------
SESSION_SECRET="your-super-secret-session-key-change-this"

# ----------------------------------
# S3/MinIO Storage Configuration
# ----------------------------------
# Storage Mode (true = MinIO for local dev, false = AWS S3 for production)
USE_MINIO=true

# S3/MinIO Credentials
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin123
S3_BUCKET_NAME=busrom-media
S3_REGION=us-east-1

# MinIO endpoint (only for local development)
S3_ENDPOINT=http://localhost:9000

# S3 Transfer Acceleration (production only, improves upload speed from China)
# Set to "true" to enable S3 Transfer Acceleration for faster international uploads
S3_USE_ACCELERATION=false

# CDN Domain (CloudFront for production, Nginx for local dev)
CDN_DOMAIN=http://localhost:8080

# ----------------------------------
# Server Configuration
# ----------------------------------
PORT=3000
NODE_ENV=development
WEB_URL=http://localhost:3001
