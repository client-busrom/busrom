# ==============================================================================
# Busrom Web - Next.js Frontend Environment Variables
# ==============================================================================
# Copy this file to .env.local and fill in your actual values
# Run: cp .env.example .env.local

# ==============================================================================
# Keystone CMS GraphQL API
# ==============================================================================

# Local Development
CMS_GRAPHQL_URL=http://localhost:3000/api/graphql

# Production (AWS EC2)
# CMS_GRAPHQL_URL=https://cms.busrom.com/api/graphql

# ==============================================================================
# AWS CloudFront CDN Configuration
# ==============================================================================

# CloudFront distribution domain for serving images
AWS_CLOUDFRONT_DOMAIN=https://d1234567890.cloudfront.net

# ==============================================================================
# Website Configuration
# ==============================================================================

# Public-facing website URL (for canonical URLs, sitemaps, etc.)
NEXT_PUBLIC_SITE_URL=http://localhost:3001

# Production URL
# NEXT_PUBLIC_SITE_URL=https://www.busrom.com

# ==============================================================================
# Default Language
# ==============================================================================

NEXT_PUBLIC_DEFAULT_LOCALE=en

# ==============================================================================
# Analytics & Tracking (Optional)
# ==============================================================================

# Google Analytics 4 Measurement ID
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ==============================================================================
# Feature Flags (Optional)
# ==============================================================================

# Enable debug mode
# NEXT_PUBLIC_DEBUG_MODE=false
