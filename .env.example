# ==============================================================================
# Busrom Project - Environment Variables Template
# ==============================================================================
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env to git!

# ==============================================================================
# PostgreSQL Database Configuration
# ==============================================================================

# Local Development (使用 Docker)
DATABASE_URL=postgresql://busrom:busrom_dev_password@localhost:5432/busrom_cms

# AWS RDS Production (生产环境配置示例)
# DATABASE_URL=postgresql://username:password@busrom-db.c9akl8s7q9d.us-east-1.rds.amazonaws.com:5432/busrom_cms

# ==============================================================================
# AWS S3 Media Storage Configuration
# ==============================================================================

AWS_ACCESS_KEY_ID=your_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_secret_access_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=busrom-media

# ==============================================================================
# AWS CloudFront CDN Configuration
# ==============================================================================

# Replace with your actual CloudFront distribution domain
AWS_CLOUDFRONT_DOMAIN=https://d1234567890.cloudfront.net

# ==============================================================================
# Keystone Session Configuration
# ==============================================================================

# Generate a secure random string (at least 32 characters)
# You can use: openssl rand -base64 32
SESSION_SECRET=your-super-secret-session-key-change-this-in-production-at-least-32-characters

# ==============================================================================
# Application URLs
# ==============================================================================

# CMS Admin Panel URL
CMS_URL=http://localhost:3000

# Frontend Website URL
WEB_URL=http://localhost:3001

# ==============================================================================
# Production URLs (for deployment)
# ==============================================================================

# Production CMS URL
# CMS_URL=https://cms.busrom.com

# Production Web URL
# WEB_URL=https://www.busrom.com
